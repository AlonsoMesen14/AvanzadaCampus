@model Avanzada.ViewModel.PerfilViewModel.VerViewModel
@{
    Layout = "~/Views/Shared/_layout.cshtml";
    ViewBag.Title = Model.Title;
}


<header>

    <nav class="navbar navbar-toggleable-md navbar-inverse navbar-fixed-top bg-inverse">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><span class="fa fa-user"></span> Perfil</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="active"><a asp-controller="Inicio" asp-action="Index">Inicio <span class="sr-only">(current)</span></a></li>
@*                    <li class="active"><a href="Inicio.html">Inicio <span class="sr-only">(current)</span></a></li>*@

                    <li><a href="#" data-toggle="modal" data-target="#Asistencia">Asistencia Tecnica</a></li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

</header>

<!-- Modal -->
<div class="modal fade" id="Asistencia" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Pongase en contacto con nosotros</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Identificacion</label>
                        <input type="number" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Corta Descripcion:</label>
                        <input type="textarea" name="" class="form-control">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="alert('Pronto nos pondremos en contacto con usted')">Enviar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="Cambiar_Contraseña" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Cambiar contraseña</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label asp-for="Mi_Perfil.Contraseña"class="col-form-label">Contraseña</label>
                        <input asp-for="Mi_Perfil.Contraseña" type="Password" name="Password1" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="Mi_Perfil.Contraseña" class="col-form-label">Repita Contraseña</label>
                        <input asp-for="Mi_Perfil.Contraseña" type="Password" name="Password2" class="form-control" required>

                        @*<label for="Password2" class="col-form-label">Repita contraseña</label>
                        <input type="Password" name="Password2" class="form-control">*@
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="CambiarContraseña()">Cambiar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>

    </div>
</div>


<body class="body_registro">

    <section class="color_label_registro">

        <div class="container">
            <br />
            <h3 class="titulos">@ViewBag.Title</h3>
            <hr>

        </div>


        <div id="wrapper" class="container">

            <form id="" class="" name="form-work" action="#">

                <fieldset>

                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="control-label" asp-for="Mi_Perfil.Nombre_Completo">Nombre</label>
                            <input asp-for="Mi_Perfil.Nombre_Completo" class="form-control" placeholder="Jon" type="text" readonly>
                        </div>
                    </div>

                    @*<div class="form-group">
                        <div class="col-md-6">
                            <label class="control-label" for="surname">Apellido</label>
                            <input name="surname" class="form-control" placeholder="Doe" type="text" required="true">
                        </div>
                    </div>*@

                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="control-label" asp-for="Mi_Perfil.Telefono">Telefono</label>
                            <div class="input-group">
                                <span class="input-group-addon">+506</span>
                                <input asp-for="Mi_Perfil.Telefono" name="tel" class="form-control" placeholder="12345678" type="number" required>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="control-label" asp-for="Mi_Perfil.Cedula">Cedula</label>
                            <div class="input-group">
                                <span class="input-group-addon">ID</span>
                                <input name="mobile" asp-for="Mi_Perfil.Cedula" class="form-control" placeholder="000000000" type="number" required readonly>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="control-label" asp-for="Mi_Perfil.Carne">Carne</label>
                            <input name="carnet" asp-for="Mi_Perfil.Carne" class="form-control" placeholder="201801110256" type="number" readonly>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="control-label" asp-for="Mi_Perfil.Fecha_Nac">Fecha nacimiento</label>
                            <input type="text" name="fecha" asp-for="Mi_Perfil.Fecha_Nac" class="form-control" readonly>
@*                            <input type="date" name="fecha" asp-for="Mi_Perfil.Fecha_Nac" class="form-control" readonly>*@
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="control-label" asp-for="Mi_Perfil.Correo">Correo</label>
                            <div class="input-group">

                                <span class="input-group-addon">E-</span>
                                <input name="correo" asp-for="Mi_Perfil.Correo" class="form-control" placeholder="ejemplo@org.com" type="email" required>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-6">
                            <label class="control-label" asp-for="Mi_Perfil.Sexo">Sexo</label>
                            <select class="form-control" asp-for="Mi_Perfil.Sexo">
                                <option selected>Seleccione el sexo</option>
                                <option value="1">Masculino</option>
                                <option value="2">Femenino</option>
                                <option value="3">Indefinido</option>
                            </select>
                        </div>
                    </div>

                               <div class="form-group">
                                <div class="col-md-6">
                                  <label class="control-label" asp-for="Mi_Perfil.Usuario">Usuario</label>
                                  <input name="usuario" asp-for="Mi_Perfil.Usuario" class="form-control" placeholder="Usuario" type="text" readonly>
                                </div>
                              </div>

                    <div class="form-group">
                        <div class="col-md-6">
                            <div class="cambiar_contraseña">
                                <a href="" class="" data-toggle="modal" data-target="#Cambiar_Contraseña"> Cambiar contraseña</a>
                            </div>

                        </div>
                    </div>
                </fieldset>
                <button type="submit" class="btn btn-dark btn-lg btn_registrar">Guardar <span class="fa fa-save" aria-hidden="true"></span></button>
            </form>
        </div>


    </section>


</body>