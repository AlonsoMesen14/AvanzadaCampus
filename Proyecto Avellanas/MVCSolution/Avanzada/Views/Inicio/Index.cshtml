<!-- Modal -->
<div class="modal fade" id="Asistencia" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Pongase en contacto con nosotros</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Identificacion</label>
                        <input type="number" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Corta Descripcion:</label>
                        <input type="text" name="" class="form-control">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="alert('Pronto nos pondremos en contacto con usted')">Enviar</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


<body>

    <br>
    <br>
    <div class="buttons">

        <div class="container">

            <div class="row">


                <div class="col col-md-2">

                    <div class="btn-group btn-group-justified">
                        <a href="Matri.html" class="btn btn-primary">Matricula</a>
                    </div>
                </div>

                <div class="col-md-2">

                    <div class="btn-group btn-group-justified">
                        <a href="Notas.html" class="btn btn-primary">Notas Profesor</a>
                    </div>
                </div>

                <div class="col-md-2">

                    <div class="btn-group btn-group-justified">
                        <a href="#" class="btn btn-primary" data-toggle="modal" data-target="#myModal" onclick="Label()">Marca Profesor</a>
                    </div>
                </div>

                <div class="col-md-2">
                    <div class="btn-group btn-group-justified">
                        <a href="Registro.html" class="btn btn-primary">Registro</a>
                    </div>
                </div>

                <div class="col-md-2">

                    <div class="btn-group btn-group-justified">
                        <a href="Carrera.html" class="btn btn-primary">Carreras</a>
                    </div>
                </div>
                <div class="col-md-2">

                    <div class="btn-group btn-group-justified">
                        <a href="AulaLinea.html" class="btn btn-primary">Aula</a>
                    </div>
                </div>

            </div>
            <hr>

            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header text-center">

                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <h4 class="modal-title w-100 font-weight-bold">Marcar Entrada y Salida</h4>
                        </div>
                        <div class="modal-body text-center mb-1">
                            <h5 class="text-align-center" id="lbl_date">Fecha</h5>
                            <label class="text-align-center" id="lbl_time">00::00::00</label>
                            <div class="text-center mt-4">
                                <button type="button" class="btn btn-success">Marcar Entrada</button>
                                <button type="button" class="btn btn-danger">Marcar Salida</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">

                <div class="col col-md-2">

                    <div class="btn-group btn-group-justified">
                        <a href="Permisos.html" class="btn btn-primary">Permisos</a>
                    </div>
                </div>

                <div class="col-md-2">

                    <div class="btn-group btn-group-justified">
                        <a href="HistorialNotas.html" class="btn btn-primary">Notas Estudiante</a>
                    </div>
                </div>

                <div class="col-md-2">

                    <div class="btn-group btn-group-justified">
