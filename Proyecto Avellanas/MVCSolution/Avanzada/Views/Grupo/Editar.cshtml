						<div class="col-md-6">
							<label class="control-label" asp-for="GrupoId">Código de Grupo</label>
							<input asp-for="GrupoId" class="form-control" placeholder="Grupo 1" type="text">
							<span asp-validation-for="GrupoId"></span>
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-6">
							<label class="control-label" asp-for="Horario">Nombre de la Grupo</label>
							<input asp-for="Horario" class="form-control" placeholder="Doe" type="text">
							<span asp-validation-for="Horario"></span>
						</div>
					</div>
				</fieldset>

